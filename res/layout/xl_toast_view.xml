<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/xl_dlg_bg"
    android:layout_gravity="center"
    >
    <!-- 
    android:background="@drawable/gprs_tip_dialog_bg"
        android:src="@drawable/xl_dlg_error"
     -->

    <ImageView android:contentDescription="@null"
        android:id="@+id/xl_toast_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:src="@drawable/xl_dlg_right"
        android:paddingRight="1dp"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
     	/>

	<TextView
        android:id="@+id/xl_toast_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingBottom="3dp"
        android:maxLines="2"
        android:textColor="#ff000000"
        android:text="toast"
        android:gravity="left|center_vertical"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/xl_toast_img"
        />

</RelativeLayout>